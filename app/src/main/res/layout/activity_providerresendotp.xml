<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".providerresendotp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="OTP Verification"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Please Enter the OTP sent to you on"
        app:layout_constraintEnd_toEndOf="@+id/verification"
        app:layout_constraintStart_toStartOf="@+id/verification"
        app:layout_constraintTop_toBottomOf="@+id/verification" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView30">

        <EditText
            android:id="@+id/textView20"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="0"
            android:background="@drawable/back" />

        <EditText
            android:id="@+id/textView21"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="0"
            android:background="@drawable/back" />

        <EditText
            android:id="@+id/textView22"
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:hint="0"
            android:layout_weight="1"
            android:background="@drawable/back" />

        <EditText
            android:id="@+id/textView23"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="0"
            android:layout_weight="1"
            android:background="@drawable/back" />

        <EditText
            android:id="@+id/textView24"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="0"
            android:layout_weight="1"
            android:background="@drawable/back" />

        <EditText
            android:id="@+id/textView26"
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="0"
            android:background="@drawable/back" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Did not revieve the OTP." />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Resend OTP Again"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/button7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:text="Submit" />
        <ProgressBar
            android:id="@+id/progressbar2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"></ProgressBar>
    </FrameLayout>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />


</androidx.constraintlayout.widget.ConstraintLayout>